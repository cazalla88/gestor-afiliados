generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Campaign {
  // Force Rebuild V1
  id            String   @id @default(uuid())
  slug          String   @unique
  type          String   // 'landing' or 'blog'
  category      String   @default("general") // SEO Silo category
  language      String   @default("en")      // 'en' or 'es'
  productName   String
  title         String
  description   String   // Intro for blog, main desc for landing
  affiliateLink String
  imageUrl      String?
  galleryImages String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Blog Specific Structured Data
  // Blog Specific Structured Data
  content       String?  // JSON string: pros, cons, features, verdict, comparisonTable

  // Hub / Cluster Structure (Self-Relation)
  parentId      String?
  parent        Campaign?  @relation("CampaignHierarchy", fields: [parentId], references: [id])
  children      Campaign[] @relation("CampaignHierarchy")
}
